    <groupId>cn.hotdev.server</groupId>
    <artifactId>hot-netty</artifactId>
    <version>1.0</version>
    <name>hot-netty</name>
    <packaging>jar</packaging>

    <description>Netty HttpServer (with:Jersey)</description>
    <url>https://github.com/ycn/hot-netty</url>

    <scm>
        <connection>scm:git:https://github.com/ycn/hot-netty.git</connection>
        <developerConnection>scm:git:git@github.com:ycn/hot-netty.git</developerConnection>
        <url>git@github.com:ycn/hot-netty.git</url>
